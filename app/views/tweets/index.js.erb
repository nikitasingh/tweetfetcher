<% if !@handles["feeds"].include?(@handle) %>
	<% if @last_id.nil? %>
		$('.tweets').html("<%= escape_javascript(render(:partial => 'tweet')) %>");
		var $container = $('.container');
		$container.masonry({
		  itemSelector: '.tile',
		  "gutter": 10,
		  "transitionDuration": 0
		});	
	<% else %>
		$('.tweets').append("<%= escape_javascript(render(:partial => 'tweet')) %>")
		var $container = $('.container');
		// initialize
		$container.masonry({
		  itemSelector: '.tile',
		  "gutter": 10,
		  "transitionDuration": 0
		});	

	<% end %>
    $("#last_id").val("<%= @tweets.last.id %>");
    $("#last_tweet_date").val("<%= @tweets.last.created_at.strftime('%d-%b-%Y') %>");
<% else %>
	$('.tweets').html("<%= escape_javascript(render(:partial => 'feed')) %>");
<% end %>

